<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Scribex – Notes App</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body class="bg-gray-900 text-white min-h-screen">

    <!-- HEADER -->
    <div class="bg-gray-800 p-4 shadow-lg">
      <h1 class="text-2xl font-bold pl-4">Scribex</h1>
    </div>

    <!-- MAIN LAYOUT -->
    <div class="flex flex-col lg:flex-row h-full">

      <!-- LEFT SECTION -->
      <div class="w-full lg:w-1/2 flex items-center justify-center bg-gray-800 p-6 lg:p-10">
        <form
          action="/create"
          method="post"
          class="bg-zinc-700 p-6 lg:p-10 rounded-xl w-full max-w-xl space-y-5 shadow-xl"
        >
          <h2 class="text-2xl font-semibold">Add a New Note</h2>

          <input
            type="text"
            name="title"
            placeholder="Enter title"
            class="w-full bg-zinc-800 p-3 rounded outline-none"
            required
          />

          <textarea
            name="description"
            placeholder="Enter description..."
            class="w-full bg-zinc-800 p-3 rounded h-32 outline-none"
            required
          ></textarea>

          <button
            type="submit"
            class="w-full bg-red-500 p-3 rounded font-semibold hover:bg-red-600"
          >
            Add Note
          </button>
        </form>
      </div>

      <!-- RIGHT SECTION -->
      <div class="w-full lg:w-1/2 bg-gray-800 p-6 lg:p-10 overflow-y-auto flex flex-col items-center">

        <% if (notes.length === 0) { %>
        <h1 class="text-gray-300 text-lg mb-4">No notes yet — add one!</h1>
        <% } %>

        <% notes.forEach(note => { 
            const displayTitle = note.replace(".txt", "").split("_").join(" ");
        %>

        <div class="bg-zinc-700 p-6 rounded-xl w-full max-w-xl shadow-lg mb-5">
          <h1 class="text-xl font-semibold mb-3"><%= displayTitle %></h1>

          <div class="flex flex-wrap items-center gap-4">
            <a href="/first/<%= note %>" class="text-blue-400 hover:underline">Read →</a>
            <a href="/edit/<%= note %>" class="bg-yellow-400 px-4 py-2 rounded text-black hover:bg-yellow-500">Edit</a>
            <a href="/delete/<%= note %>" class="bg-red-500 px-4 py-2 rounded text-black hover:bg-red-600">Delete</a>
          </div>
        </div>

        <% }) %>

      </div>
    </div>

  </body>
</html>
